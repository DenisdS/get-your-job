{
  "compilerOptions": {
    "sourceMap": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "lib": [
      "es2015",
      "es2016",
      "dom"
    ],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "./src/**/*",
    "images.d.ts"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "node_modules"
  ]
}
